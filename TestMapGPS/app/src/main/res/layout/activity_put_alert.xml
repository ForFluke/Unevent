<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tawin.testmapgps.putAlert"
    >

    <EditText

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editIuput"
        android:hint="@string/Input"
        android:layout_marginTop="53dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editIuput"
        android:text="Add Event"
        android:id="@+id/addEventButton"/>


    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:background="@android:drawable/presence_audio_busy"
        android:id="@+id/voiceBut"
        android:layout_marginBottom="11dp"
        android:layout_above="@+id/addEventButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="voiceBut"/>

</RelativeLayout>
